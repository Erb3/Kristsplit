{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://raw.githubusercontent.com/Erb3/Kristsplit/main/config.schema.json",
  "title": "KristSplit config schema",
  "description": "The JSON schema for KristSplit",
  "type": "object",
  "properties": {
    "splits": {
      "type": "array",
      "items": {
        "type": "object",

        "properties": {
          "input": {
            "type": "string"
          },

          "inputFormat": {
            "type": "string",
            "enum": ["api", "kristwallet"]
          },

          "output": {
            "type": "array",
            "uniqueItems": true,

            "items": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string",
                  "maxLength": 10,
                  "minLength": 10,
                  "pattern": "^k[a-z0-9]{9}"
                },

                "percent": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 100
                }
              },
              "required": ["address", "percent"]
            },
            "minItems": 1
          },

          "rest": {
            "type": "string",
            "enum": ["REFUND", "KEEP"]
          }
        },
        "required": ["input", "output", "rest", "inputFormat"]
      }
    }
  },
  "required": ["splits"]
}
